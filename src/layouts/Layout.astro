---
export interface Props {
  title?: string;
}
const { title = 'Astro Badge' } = Astro.props as Props;
const description = 'Badges to show off your Astro pride';
const ogImgURL = new URL('/ogimg.png', Astro.site).href;
const ogImgAlt = 'Badge with the text “Built with Astro”';
---

<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={Astro.canonicalURL}>

  <!-- OpenGraph Tags -->
  <meta property="og:title" content={title}>
  <meta property="og:type" content="article">
  <meta property="og:url" content={Astro.canonicalURL}>
  <meta property="og:locale" content="en">
  <meta property="og:image" content={ogImgURL}>
  <meta property="og:image:alt" content={ogImgAlt}>
  <meta name="description" property="og:description" content={description}>
  <meta property="og:site_name" content="Astro Badge">

  <!-- Twitter Tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="swithinbank">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={ogImgURL}>
  <meta name="twitter:image:alt" content={ogImgAlt}>
</head>

<body>
  <main>
    <slot />
  </main>
</body>

</html>

<style is:global>
  /*
  1. Use a more-intuitive box-sizing model.
*/
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  /*
  3. Allow percentage-based heights in the application
*/
  html,
  body {
    margin: 0;
    height: 100%;
  }

  /*
  Typographic tweaks!
  4. Add accessible line-height
  5. Improve text rendering
*/
  body {
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
  }

  /*
  7. Remove built-in form typography styles
*/
  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  /*
  8. Avoid text overflows
*/
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    overflow-wrap: break-word;
  }

  :root {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    text-align: center;
  }

  body {
    padding: 2rem .5rem;
  }

  main> :first-child {
    margin-top: 0;
  }

  body>* {
    max-width: 50rem;
    margin-left: auto;
    margin-right: auto;
  }

  .astro-code {
    padding: 2rem;
    user-select: all;
    text-align: left;
  }
</style>